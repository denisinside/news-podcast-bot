{
  "name": "telegram-podcast-bot",
  "version": "1.0.0",
  "description": "Telegram bot for generating personalized news podcasts",
  "keywords": [
    "telegram",
    "bot",
    "podcast",
    "news",
    "typescript"
  ],
  "homepage": "https://github.com/denisinside/news-podcast-bot#readme",
  "bugs": {
    "url": "https://github.com/denisinside/news-podcast-bot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denisinside/news-podcast-bot.git"
  },
  "license": "MIT",
  "author": "Your Name",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "dev:worker": "nodemon --exec ts-node -r tsconfig-paths/register src/worker.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google/genai": "^1.22.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.6.2",
    "bullmq": "^5.58.7",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "mongoose": "^8.18.2",
    "redis": "^5.8.2",
    "telegraf": "^4.16.3",
    "telegraf-session-mongodb": "^2.0.2",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
